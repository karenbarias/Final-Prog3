@model IEnumerable<Final.Models.Empleados>

@{
    ViewBag.Title = "Index";
}

<h2>Empleados Activos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
	@using (Html.BeginForm())
	{
		<h4>Filtrar: </h4>
		<table>
			<tr>
				<td>
					<label class="radio-inline">
						@Html.RadioButton("optradio", "todos", true) Todos los empleados activos
					</label>
				</td>
				<td style="padding:5px">
					<label class="radio-inline">
						@Html.RadioButton("optradio", "nombre") Por Nombre:
					</label>
				</td>
				<td>
					<label class="radio-inline">
						@Html.RadioButton("optradio", "dep") Por Departamento:
					</label>
				</td>
				<td style="padding:5px"></td>
			</tr>
			<tr>
				<td></td>
				<td style="padding:5px">
					@Html.TextBox("nombre", "", htmlAttributes: new { @class = "form-control" })
				</td>
				<td>
					@Html.TextBox("dep", "", htmlAttributes: new { @class = "form-control" })
				</td>
				<td style="padding:5px">
					<input type="submit" value="Filtrar" class="btn btn-default" />
				</td>
			</tr>
		</table>		
		
	}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodigoEmpleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargos.Cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamentos.CodigoDepartamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoEmpleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaIngreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cargos.Cargo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamentos.CodigoDepartamento)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
        </td>
    </tr>
}

</table>
