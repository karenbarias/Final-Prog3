
@{
	ViewBag.Title = "Salida";
}

<h2>Inactivar Empleado</h2>
<p>
	@using (Html.BeginForm())
	{
		<div class="form-group">
			@Html.Label("Codigo de Empleado: ", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBox("empleado", "", new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Tipo de salida: ", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label class="radio-inline">@Html.RadioButton("optradio", "d1", true) Despido</label>
				<label class="radio-inline">@Html.RadioButton("optradio", "d2") Desahucio </label>
				<label class="radio-inline">@Html.RadioButton("optradio", "d3") Renucia </label>
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Motivo: ", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextArea("motivo", "", htmlAttributes: new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Fecha de salida: ", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextArea("fecha", "", htmlAttributes: new { @class = "form-control" })
			</div>
		</div>

		<input type="submit" value="Inactivar Empleado" class="btn btn-default" />
	}
</p>
<br />


@ViewBag.Estatus

